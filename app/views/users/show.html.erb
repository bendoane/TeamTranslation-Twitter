<% if current_user %>
  <div class="panel right">
    <h1>Rant your Rage</h1>
    <p>
    <%= form_for @rant do |f|%>
      <%= f.text_area :content,skip_label:true, :size=> "100x5", :placeholder => "Rant away..."%><br>
      <%= f.submit "Rant!" %>
      <% end %>
    </p>
  </div>
<% end %>

<div class="panel left">
    <h1>Your Rage Page</h1>
    <br>
    <h3>Your Rants</h3>
    <div>
        <p>
          <% @user.rants.each do |rant| %>
          <br><span><%= rant.user.name %> @ <%=rant.user.username%></span><br>
          <br>
            <span><%= rant.content %></span><br>
            <br>
            <span>Posted <%= time_ago_in_words(rant.created_at) %> ago</span>
            <br>
            <br>
            <% end %>
        <span><%= @user.followers.count %> Followers</span>
        <span><%= @user.followeds.count %> Following</span>
        </p>
    </div>
</div>
<%= paginate @rants %>
