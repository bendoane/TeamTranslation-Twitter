<% if current_user %>
  <div class="panel left">
    <h1>Rant your Rage</h1>
      <%= bootstrap_form_for @rant do |f|%>
    <div class="control-group">
      <%= f.text_area :content, skip_label:true, :size => "100x5", :placeholder => "Rant away..." %>
      <%= f.submit "Rant!", method: :post %>
    </div>
      <% end %>
  </div>
<% end %>
<div>
  <%= link_to "Public Rants", rants_path %>
  <%= link_to "My Profile", current_user %>
</div>
<div class = "row">
<div class="col-xs-9 panel right">
  <h4>Your Rants</h4>
    <% @rants.each do |rant| %>
      <span><%= rant.content %></span><br>
      <span>Posted <%= time_ago_in_words(rant.created_at) %> ago</span>
      <br>
      <br>
      <% end %>
</div>

<div class = "panel right">
  <h4>Profile Info</h4>
    <span><%= @user.rants.size %> Rants</span>
    <span><%= @user.followers.count %> Followers</span>
    <span><%= @user.followeds.count %> Following</span><br>
</div>

<h1>Recent Rants</h1>
<div class="col-xs-3 panel left">
  <div>
    <% @rants.each do |rant| %>
      <br><%= rant.user.name %> @ <%=rant.user.username%><span>   Posted <%= time_ago_in_words(rant.created_at) %> ago</span><br>
      <p><%= rant.content %></p>
      <span><%= rant.user.followers.count %> Followers</span>
      <span><%= rant.user.followeds.count %> Following</span><br>
        <br>
    <% end %>
  </div>
</div>
</div>

<%= paginate @rants %>
